<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/Item"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Enter Task Name" />

    <EditText
        android:id="@+id/Description"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Enter Description (Optional)" />

    <EditText
        android:id="@+id/Priority"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Enter Priority (Optional)" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilDeadline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/Deadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Deadline (Optional)"
                android:inputType="none"
                android:focusable="false" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/ivDatePicker"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="Date Picker"
            android:src="@drawable/baseline_calendar_month_24" />
    </LinearLayout>

    <EditText
        android:id="@+id/Category"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Enter Category (Optional)" />

</LinearLayout>